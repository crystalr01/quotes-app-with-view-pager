<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="7dp"
            android:layout_margin="7dp"
            app:cardElevation="3dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:orientation="horizontal">

                    <com.makeramen.roundedimageview.RoundedImageView
                        android:layout_width="56dp"
                        android:layout_height="54dp"
                        android:layout_margin="2dp"
                        android:scaleType="fitXY"
                        app:riv_corner_radius="90dp"
                        android:layout_marginBottom="2dp"
                        android:padding="3dp"
                        android:background="#c1c1c1"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#c1c1c1"
                            android:layout_margin="2dp"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="11dp"
                            android:layout_margin="2dp"
                            android:background="#c1c1c1" />

                    </LinearLayout>

                </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:id="@+id/item_card"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >

                        <ImageView
                            android:id="@+id/item_quote"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginHorizontal="10dp"
                            android:src="@drawable/baseline_format_quote_24"
                            app:tint="#c1c1c1" />

                        <TextView
                            android:id="@+id/shayariTexta"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/item_quote"
                            android:layout_marginHorizontal="10dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginBottom="10dp"
                            android:background="#c1c1c1"
                            android:textSize="18sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_below="@+id/shayariTexta"
                            android:layout_marginBottom="5dp"
                            android:background="#fff"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/copyButton"
                                android:layout_width="wrap_content"
                                android:layout_height="38dp"
                                android:src="@drawable/copyt"
                                android:padding="6dp"
                                app:tint="#c1c1c1"
                                android:layout_marginHorizontal="5dp"
                                android:layout_marginVertical="2dp"
                                android:background="#c1c1c1" />

                            <ImageView
                                android:id="@+id/shareButton"
                                android:layout_width="wrap_content"
                                android:layout_height="38dp"
                                android:layout_marginHorizontal="5dp"
                                android:layout_marginVertical="2dp"
                                android:src="@drawable/share"
                                android:background="#c1c1c1"
                                android:padding="6dp"
                                app:tint="#c1c1c1"
                                android:textSize="10sp" />

                            <ImageView
                                android:id="@+id/whatsappButton"
                                android:layout_width="wrap_content"
                                android:layout_height="38dp"
                                android:text="Edit"
                                android:src="@drawable/whatsapp"
                                android:padding="6dp"
                                app:tint="#c1c1c1"
                                android:textSize="10sp"
                                android:layout_marginVertical="2dp"
                                android:layout_marginHorizontal="5dp"
                                android:background="#c1c1c1" />

                            <ImageView
                                android:id="@+id/editButton"
                                android:layout_width="wrap_content"
                                android:layout_height="38dp"
                                android:text="Edit"
                                android:src="@drawable/eddit"
                                android:padding="6dp"
                                app:tint="#c1c1c1"
                                android:textSize="10sp"
                                android:layout_marginVertical="2dp"
                                android:layout_marginHorizontal="5dp"
                                android:background="#c1c1c1" />



                        </LinearLayout>

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </RelativeLayout>

</LinearLayout>